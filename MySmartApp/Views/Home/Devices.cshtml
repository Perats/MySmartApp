@model IEnumerable<MySmartApp.Models.DevicesViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <h2>Devices List</h2>

    <a class="sidenav-item-link">
        @Html.ActionLink("Create New", "Create")
    </a>
    <div class="card-body pt-0 pb-5">
        <table class="table card-table table-responsive table-responsive-large" style="width:100%">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DeviceName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastPinDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DeviceStatus)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeviceName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastPinDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeviceStatus)
                    </td>
                    @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>*@
                </tr>
            }

        </table>
    </div>
</div>


