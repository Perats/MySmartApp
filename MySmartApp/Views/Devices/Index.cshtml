@model MySmartApp.Models.HomeModel

@{
    ViewBag.Title = "Index";
}
<div>
    <h2 class="uk-heading-bullet">Devices</h2>
    <ul class="uk-grid-small uk-child-width-1-2 uk-child-width-1-4@s uk-text-center" uk-sortable="handle: .uk-card" uk-grid>
        @foreach (var item in Model.Devices)
        {
            <li>
                <div class="uk-card uk-card-default uk-card-body">
                    <h3 class="uk-card-title">
                        @Html.ActionLink(item.DeviceName, "Details", "Devices", new { id = item.Id }, null)
                    </h3>
                    <dl class="uk-description-list uk-description-list-divider">
                        <dt>
                            @Html.DisplayNameFor(modelItem => item.Temperature)
                        </dt>
                        <dd>
                            @Html.DisplayFor(modelItem => item.Temperature)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(modelItem => item.Humidity)
                        </dt>
                        <dd>
                            @Html.DisplayFor(modelItem => item.Humidity)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(modelItem => item.DeviceStatus)
                        </dt>
                        <dd>
                            @Html.DisplayFor(modelItem => item.DeviceStatus)
                        </dd>
                    </dl>
                </div>
            </li>
        }
    </ul>
</div>