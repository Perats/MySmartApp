@model MySmartApp.Models.HomeModel

@{
    ViewBag.Title = "Index";
}
<div>
    <h2 class="uk-heading-bullet">Devices</h2>
    <ul class="uk-grid-small uk-child-width-1-2 uk-child-width-1-4@s uk-text-center" uk-sortable="handle: .uk-card" uk-grid>
        @foreach (var item in Model.Devices)
        {
            <li>
                <div class="uk-card uk-card-default uk-card-body">@Html.ActionLink(item.DeviceName, "Details", "Devices", new { id = item.Id }, null)</div>
            </li>
        }
    </ul>
</div>